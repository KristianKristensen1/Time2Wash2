<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#767884">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:text="Time of booking" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp"
        android:text="Machine" />

    <TextView
        android:id="@+id/myBookingPopUp_timeOfBooking_tv"
        android:layout_width="122dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView2"
        android:text="TextView" />

    <TextView
        android:id="@+id/myBookingPopUp_Machine_tv"
        android:layout_width="123dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView3"
        android:text="TextView" />

    <Button
        android:id="@+id/myBookingPopUp_Cancel_btn"
        android:layout_width="116dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="21dp"
        android:text="Cancel Booking" />

    <Button
        android:id="@+id/myBookingPopUP_OK_btn"
        android:layout_width="105dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/myBookingPopUp_Cancel_btn"
        android:layout_marginEnd="25dp"
        android:text="OK" />
</RelativeLayout>